<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10"
    tools:context=".CalculatorFragment">

    <TextView
        android:id="@+id/smallTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/largeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/background"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/ceButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:padding="0dp"
                android:text="CE"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_7Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_4Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_1Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/signButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/cButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_8Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_5Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_2Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_0Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/backspaceButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:foregroundTint="@color/black"
                android:src="@drawable/backspace_icon" />

            <Button
                android:id="@+id/_9Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_6Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/_3Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/number_button_background"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/dotButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="."
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/divButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/multiButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/subButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/operator_button_background"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Button
                android:id="@+id/calcButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/calc_button_background"
                android:text="="
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>